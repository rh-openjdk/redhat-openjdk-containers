{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "testrunner",
    "labels": {
      "name": "testrunner"
    }
  },
  "spec": {
    "terminationGracePeriodSeconds": 0,
    "containers": [
      {
        "name": "testrunner",
        "readinessProbe": {
          "timeoutSeconds": 1,
          "initialDelaySeconds": 5,
          "tcpSocket": {
            "port": 9990
          }
        },
        "image": "docker.io/goldmann/wildfly-testrunner:ppc64le",
        "ports": [
          {
            "containerPort": 8080,
            "protocol": "TCP"
          },
          {
            "containerPort": 9990,
            "protocol": "TCP"
          },
          {
            "containerPort": 9999,
            "protocol": "TCP"
          }
        ],
        "env": [
          {
            "name": "ADMIN_USERNAME",
            "value": "admin"
          },
          {
            "name": "ADMIN_PASSWORD",
            "value": "Admin#70365"
          }
        ]
      }
    ]
  }
}
